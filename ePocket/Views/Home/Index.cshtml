@{
    ViewData["Title"] = "Home - ePocket";
}

<div class="container-fluid bg-dark text-light">

    <!-- Hero Section -->
    <div class="row align-items-center min-vh-100">
        <div class="col-md-6">
            <h2 class="text-success">INFORMATION SECURITY AWARENESS</h2>
            <p class="lead">Protect yourself from fake online applications targeting banking customers that lead to financial loss and identity theft.</p>
            <a href="#" class="btn btn-success btn-lg mt-4">Learn More</a>
        </div>
        <div class="col-md-6 text-center">
            <img src="~/images/security-awareness.png" alt="Security Awareness" class="img-fluid">
        </div>
    </div>

    <!-- Quick Links Section -->
    <div class="row text-center py-4 bg-black">
        <div class="col">
            <a href="#" class="text-light">
                <img src="~/images/icons/branch-locator.png" alt="Branch Locator" class="img-fluid mb-2">
                <p>Branch Locator</p>
            </a>
        </div>
        <div class="col">
            <a href="#" class="text-light">
                <img src="~/images/icons/customer-complaints.png" alt="Customer Complaints" class="img-fluid mb-2">
                <p>Customer Complaints</p>
            </a>
        </div>
        <div class="col">
            <a href="#" class="text-light">
                <img src="~/images/icons/iban-generator.png" alt="IBAN Generator" class="img-fluid mb-2">
                <p>IBAN Generator</p>
            </a>
        </div>
        <div class="col">
            <a href="#" class="text-light">
                <img src="~/images/icons/remittance-tracker.png" alt="Remittance Tracker" class="img-fluid mb-2">
                <p>Remittance Tracker</p>
            </a>
        </div>
        <div class="col">
            <a href="#" class="text-light">
                <img src="~/images/icons/schedule-charges.png" alt="Schedule of Charges" class="img-fluid mb-2">
                <p>Schedule of Bank Charges</p>
            </a>
        </div>
    </div>
</div>
